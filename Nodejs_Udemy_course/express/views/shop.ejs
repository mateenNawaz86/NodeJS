<%- include('includes/head'); %>
  </head>
  <body>
    <%- include('includes/nav'); %>
    <main>
      <% if (prods.length > 0) { %>
      <div class="grid">
        <% for (let product of prods) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="https://images.pexels.com/photos/11961823/pexels-photo-11961823.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load"
              alt="pexels"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$12</h2>
            <div class="product__description">A unique breakfast for you!</div>
          </div>
          <div class="card__actions">
            <button class="btn">Add to Cart</button>
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <h1 class="center">No Product Found!!</h1>
      <% } %>
    </main>
    <%- include('includes/end'); %>
