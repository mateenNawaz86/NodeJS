{{>boilerPlate}}
    <div class="container-fluid main_menu">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" id="navbar-brand" href="/">
              <i class="fa-solid fa-snowflake"> </i>
              Weather
              <i class="fa-solid fa-snowflake"></i></a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              {{>navbar}}
            </div>
          </nav>
        </div>
      </div>
    </div>

    <!-- Header area for home page start -->
    <div class="container main_header">
      <div class="row">
        <div class="col-md-6 col-12 main_header_left">
          <p>Welcome to Weather checking App</p>
          <h2>Get the lastest <span>Weather</span> of your city</h2>
          <a href="/weather">
            <button class="btn btn-info">Check Now</button>
          </a>
        </div>
        <div class="col-md-6 col-12 main_header_right">
          <div
            id="carouselExampleControls"
            class="carousel slide"
            data-ride="carousel"
          >
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="w-100" src="./assets/bg1.jpg" alt="First slide" />
              </div>
              <div class="carousel-item">
                <img class="w-100" src="./assets/bg2.jpg" alt="Second slide" />
              </div>
              <div class="carousel-item">
                <img class="w-100" src="./assets/bg3.jpg" alt="Third slide" />
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleControls"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleControls"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Header area for home page end -->

   {{>footer}}